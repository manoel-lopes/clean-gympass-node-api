{
  "extends": "@rocketseat/eslint-config/node",
  "rules": {
    "no-var": "error",
    "no-redeclare": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/parameter-properties": [
      "error",
      {
        "allow": [
          "readonly",
          "private readonly"
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": [
         "*prisma*.ts"
      ],
      "rules": {
        "camelcase": "off"
      }
    }
  ]
}